<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { %> 
        <div class="card-container">
          <% blogs.forEach(blog => { %>
            <div class="card">
              <h3><%= blog.title %></h3>
              <p><%= blog.snippet %></p>
            </div>
            <% }) %> 
            <% } else { %>
              <p>No blogs to display</p>
              <% } %>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>